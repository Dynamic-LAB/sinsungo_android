<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refrigerator"
            android:textColor="@color/royal_blue"
            android:textSize="32sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="39dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_userinfo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/btn_userinfo"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_fragment_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_fragment_title" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout_refrigerator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/royal_blue"
            app:tabTextColor="@color/black"
            app:tabSelectedTextColor="@color/royal_blue"
            android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_fragment_title">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cold"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iced"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fresh"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indoor"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seasoning"/>

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager_ingredient"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tablayout_refrigerator" />

        <com.leinardi.android.speeddial.SpeedDialOverlayLayout
            android:id="@+id/sdv_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:clickable_overlay="true"/>

        <com.leinardi.android.speeddial.SpeedDialView
            android:id="@+id/sdv_refrigerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            app:sdOverlayLayout="@id/sdv_overlay"
            app:sdExpansionMode="top"
            app:sdMainFabAnimationRotateAngle="90"
            app:sdMainFabClosedSrc="@drawable/btn_add"
            app:sdMainFabClosedBackgroundColor="@color/royal_blue"
            app:sdMainFabClosedIconColor="@color/black"
            app:sdMainFabOpenedSrc="@drawable/btn_close"
            app:sdMainFabOpenedBackgroundColor="@color/royal_blue"
            app:sdMainFabOpenedIconColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
