<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sinsungo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/royal_blue</item>
        <item name="colorPrimaryVariant">@color/lavender_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/shamrock</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/backgroundColor</item>
        <!-- Background color. -->
        <item name="backgroundColor">@color/white_smoke</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>
</resources>
